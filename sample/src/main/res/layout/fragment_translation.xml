<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nestedScrollViewTranslation"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:id="@+id/linearViewTranslation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/material_view_pager_placeholder"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="@dimen/cardMarginVertical"
                android:layout_marginLeft="@dimen/cardMarginHorizontal"
                android:layout_marginRight="@dimen/cardMarginHorizontal"
                android:layout_marginTop="@dimen/cardMarginVertical"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp">

                <com.github.florent37.materialtextfield.MaterialTextField
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mtf_labelColor="#666"
                    app:mtf_image="@drawable/email_icon_blue"
                    app:mtf_cardCollapsedHeight="4dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    app:mtf_animationDuration="1000"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Invia un messaggio di testo"
                        android:textColor="#333"

                        android:textSize="15sp" />

                </com.github.florent37.materialtextfield.MaterialTextField>
            </android.support.v7.widget.CardView>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="@dimen/cardMarginVertical"
                android:layout_marginLeft="@dimen/cardMarginHorizontal"
                android:layout_marginRight="@dimen/cardMarginHorizontal"
                android:layout_marginTop="@dimen/cardMarginVertical"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp">

                <com.github.florent37.materialtextfield.MaterialTextField
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mtf_labelColor="#666"
                    app:mtf_image="@drawable/microphone_icon_blue"
                    app:mtf_cardCollapsedHeight="4dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    app:mtf_animationDuration="1000"
                    >

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Invia un messaggio vocale"
                        android:editable="false"
                        android:textColor="#333"

                        android:textSize="15sp" />

                </com.github.florent37.materialtextfield.MaterialTextField>
            </android.support.v7.widget.CardView>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/cardMarginVertical"
                android:layout_marginLeft="@dimen/cardMarginHorizontal"
                android:layout_marginRight="@dimen/cardMarginHorizontal"
                android:layout_marginTop="@dimen/cardMarginVertical"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardPreventCornerOverlap="false"
                app:contentPadding="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!--   android:id="@+id/text_translation" -->

                    <TextView
                        android:id="@+id/textViewTranslation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/greatvibes"
                        android:paddingLeft="40dp"
                        android:paddingTop="20dp"
                        android:paddingRight="30dp"
                        android:paddingBottom="20dp"
                        android:text="Questa Ã¨ la traduzione che sto facendo qui sopra per scrivere del testo interessante"
                        android:textSize="50sp" />
                    <Button
                        android:id="@+id/buttonTranslation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@color/firstColor"
                        android:text="Inizia traduzione"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </FrameLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>